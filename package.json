{
  "name": "cv_ideal",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "tsnd --respawn -r tsconfig-paths/register --transpile-only src/framework/http/server.ts",
    "prod": "tsc && tsc-alias && ENVIRONMENT=prod node dist/framework/http/server.js",
    "build": "rm -rf dist && tsc && tsc-alias",
    "show": "ENVIRONMENT=local yarn build && ENVIRONMENT=local yarn typeorm migration:show -d dist/framework/db/connect.db.js",
    "revert": "ENVIRONMENT=local yarn build && ENVIRONMENT=local yarn typeorm migration:revert -d dist/framework/db/connect.db.js",
    "migration:run": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run -d src/framework/db/connect.db.ts"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "env-var": "^7.5.0",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "jest": "^29.7.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
